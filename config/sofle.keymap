#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------------------------
// |  `    |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   | BKSPC |
// | ESC/1 |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   |   |   |
// | TAB/C |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   |  CMD+0 |  | MUTE  |  N   |  M    |  ,    |  .   |   /   | RS/EN |
//               | GUI | ALT  |  {   |  }   |  ENTER |  | SPACE |  ^   |  <-   |  v    |  ->  |
            bindings = <
&kp GRAVE        &kp N1   &kp N2   &kp N3    &kp N4    &kp N5                             &kp N6 &mt KP_MINUS N7    &mt KP_PLUS N8    &mt UNDER N9   &mt KP_EQUAL N0   &kp BSPC
&lt 1 ESC        &kp Q    &kp W    &kp E     &kp R     &kp T                              &kp Y  &kp U     &kp I     &kp O    &kp P    &kp BSLH
&mt CAPS TAB     &kp A    &kp S    &kp D     &kp F     &kp G                              &kp H  &kp J     &kp K     &kp L    &kp SEMI &kp SQT
&kp LSHFT        &kp Z    &kp X    &kp C     &kp V     &kp B     &kp LG(N0)    &kp C_MUTE &kp N  &kp M     &kp COMMA &kp DOT  &kp FSLH &mt RSHFT RET
                 &kp LGUI &kp LALT &kp LBKT  &kp RBKT            &kp RET       &kp SPACE  &kp UP &kp LEFT  &kp DOWN  &kp RIGHT
          >;

           sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        lower_layer {
// TODO: Some binds are waiting for shifted keycode support.
// ------------------------------------------------------------------------------------------------------------
// |       |     |     |      |      |      |                   |      |  7   |  8   |   9  |    0  |       |
// |       |     |     |      |      |      |                   |      |  4   |  5   |   6  |    +  |   *   |
// |       |     |     |      |      |      |                   |      |  1   |  2   |   3  |    -  |   /   |
// |       |     |     |      |      |      |        |  |       |      |      |  ,   |   .  |    =  | ENTER |
//               |     |      |      |      |        |  | PLAY  |PG DW |PG UP |BR DW |BR UP |
            bindings = <
&trans    &trans    &trans    &trans      &trans    &trans                    &trans    &kp N7   &kp N8    &kp N9    &kp N0        &trans
&trans    &trans    &trans    &trans      &trans    &trans                    &trans    &kp N4   &kp N5    &kp N6    &kp PLUS      &kp KP_MULTIPLY
&trans    &trans    &trans    &trans      &trans    &trans                    &trans    &kp N1   &kp N2    &kp N3    &kp KP_MINUS  &kp KP_DIVIDE
&trans    &trans    &trans    &trans      &trans    &trans    &trans   &trans &trans    &trans   &kp COMMA    &kp KP_DOT &kp KP_EQUAL  &trans
                    &trans    &trans      &trans    &trans    &trans   &kp C_PP &kp PG_DN    &kp PG_UP   &kp C_BRI_DN    &kp C_BRI_UP
            >;
            
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };
    };
};
